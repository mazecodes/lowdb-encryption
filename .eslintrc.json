{
  "root": true,
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unpublished-require": "off"
  }
}
